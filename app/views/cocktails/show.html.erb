<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= "#{@cocktail.name} Cocktail" %></h1>
      <% if @cocktail.photos? %>
      <%= cl_image_tag @cocktail.photos.first.path, width: 200, height: 300, crop: :fill %>
      <% end %>
    </div>

    <div class="col-xs-6">

      <% @doses.each do |d| %>
      <% if d.ingredient %>
      <%= "#{d.description} of #{d.ingredient.name}" %> |
      <%= link_to dose_path(d), method: :delete do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
      <% end %>
      <% end %>

    </div>

    <div class="col-xs-6">
      <h3>New dose</h3>
      <%= simple_form_for [@cocktail, @dose] do |d| %>
      <%= d.input :description %>
      <%= d.association :ingredient %>
      <%= d.submit "Add a dose" %>
      <% end %>

    </div>

  </div>
</div>

